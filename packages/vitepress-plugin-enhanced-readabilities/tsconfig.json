{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "declaration": false,
    "noEmit": false,
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/dist/**"
  ]
}
