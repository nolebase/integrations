{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": [
      "./src/asciinema.d.ts"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.mts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./src/**/*.vue"
  ],
  "exclude": [
    "**/dist/**",
    "node_modules"
  ]
}
