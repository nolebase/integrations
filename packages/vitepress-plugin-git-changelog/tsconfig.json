{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@nolebase/ui": [
        "../ui/src/index.ts"
      ],
      "@nolebase/ui/*": [
        "../ui/src/components/*"
      ]
    },
    "types": [
      "./src/client/virtual.d.ts",
      "./yaml.d.ts"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "noEmit": false,
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/dist/**",
    "node_modules"
  ]
}
